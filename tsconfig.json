{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",

    "strict": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,

    "module": "esnext",
    "target": "ES2017",
    "sourceMap": true,

    "skipLibCheck": true,

    "allowJs": true,
    "checkJs": true,

    "jsx": "preserve",

    "pretty": true,
    "baseUrl": ".",
    "declaration": false,
    "importHelpers": false,
    "noEmitHelpers": true,
    "removeComments": true,
    "stripInternal": true,
    "resolveJsonModule": true,

    "paths": {
      "_r/*": ["src/renderer/*"],
      "_m/*": ["src/main/*"],
      "_a/*": ["src/assets/*"],
      "_t/*": ["src/typings/*"],
      "_c/*": ["src/common/*"],
      "__mocks__/*": ["__mocks__/*"]
    }
  },
  "include": ["src/**/*"]
}
