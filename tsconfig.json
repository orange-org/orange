{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",

    "strict": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    "module": "esnext",
    "target": "ES2017",
    "sourceMap": true,

    "skipLibCheck": true,

    "allowJs": true,
    "checkJs": true,

    "jsx": "preserve",

    "pretty": true,
    "baseUrl": ".",
    "declaration": false,
    "importHelpers": false,
    "noEmitHelpers": true,
    "removeComments": true,
    "stripInternal": true,
    "resolveJsonModule": true
  },

  "include": ["src/**/*", "webpack/**/*", "scripts/**/*", ".github/action/**/*.ts"]
}
